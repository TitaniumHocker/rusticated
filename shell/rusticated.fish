# rusticated fish shell theme by nightsense (https://github.com/nightsense/rusticated)

# normal text
set fish_color_host              4b3a29
set fish_color_normal            4b3a29
set fish_pager_color_completion  4b3a29
set fish_pager_color_description 4b3a29

# muted text
set fish_color_autosuggestion    695644
set fish_color_comment           695644

# reverse muted
set fish_pager_color_progress    dacfc4 --background=#695644

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#b29d89
set fish_color_search_match      --background=#b29d89
set fish_color_selection         --background=#b29d89

# red errors/warnings
set fish_color_cancel            9e2f52
set fish_color_cwd_root          9e2f52
set fish_color_error             9e2f52

# gold special elements
set fish_color_redirection       804d07
set fish_color_escape            804d07
set fish_color_operator          804d07
set fish_color_end               804d07

# green commands/status
set fish_color_command           31640f
set fish_color_cwd               31640f
set fish_color_user              31640f

# cyan parameters
set fish_color_param             00645b

# blue quoted strings
set fish_color_quote             005c99

# magenta pager name match
set fish_pager_color_prefix      6d4697

